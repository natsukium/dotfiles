ARG IMAGE="base"

# alias for major languages
FROM debian:12-slim@sha256:2424c1850714a4d94666ec928e24d86de958646737b1d113f5b2207be44d37d8 AS base
FROM python:slim@sha256:6f79e7a10bb7d0b0a50534a70ebc78823f941fba26143ecd7e6c5dca9d7d7e8a AS python
FROM node:lts-slim@sha256:88f44fbb06cc98e1451e4e015c122f84030ec55c603f753ed97b889db0bb8d4d AS nodejs
FROM rust:slim@sha256:33219ca58c0dd38571fd3f87172b5bce2d9f3eb6f27e6e75efe12381836f71fa AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

CMD ["bash"]
