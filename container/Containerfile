ARG IMAGE="base"

# alias for major languages
FROM debian:12-slim@sha256:4b50eb66f977b4062683ff434ef18ac191da862dbe966961bc11990cf5791a8d AS base
FROM python:slim@sha256:914bf5c12ea40a97a78b2bff97fbdb766cc36ec903bfb4358faf2b74d73b555b AS python
FROM node:lts-slim@sha256:ec318fe0dc46b56bcc1ca42a202738aeb4f3e347a7b4dd9f9f1df12ea7aa385a AS nodejs
FROM rust:slim@sha256:57d415bbd61ce11e2d5f73de068103c7bd9f3188dc132c97cef4a8f62989e944 AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

CMD ["bash"]
