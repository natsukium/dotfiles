ARG IMAGE="base"

# alias for major languages
FROM debian:13-slim@sha256:a347fd7510ee31a84387619a492ad6c8eb0af2f2682b916ff3e643eb076f925a AS base
FROM python:slim@sha256:e3782138420d9e87c16497320817db6ca8689e354d6150426dd6fc261f3fd682 AS python
FROM node:lts-slim@sha256:76d0ed0ed93bed4f4376211e9d8fddac4d8b3fbdb54cc45955696001a3c91152 AS nodejs
FROM rust:slim@sha256:038689d4c9bf5a3fefd6139eea67bd8228a96b92eb8710836859ba42e6eeed7a AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

