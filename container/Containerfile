ARG IMAGE="base"

# alias for major languages
FROM debian:12-slim@sha256:4b50eb66f977b4062683ff434ef18ac191da862dbe966961bc11990cf5791a8d AS base
FROM python:slim@sha256:60248ff36cf701fcb6729c085a879d81e4603f7f507345742dc82d4b38d16784 AS python
FROM node:lts-slim@sha256:557e52a0fcb928ee113df7e1fb5d4f60c1341dbda53f55e3d815ca10807efdce AS nodejs
FROM rust:slim@sha256:57d415bbd61ce11e2d5f73de068103c7bd9f3188dc132c97cef4a8f62989e944 AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

CMD ["bash"]
