ARG IMAGE="base"

# alias for major languages
FROM debian:12-slim@sha256:b1211f6d19afd012477bd34fdcabb6b663d680e0f4b0537da6e6b0fd057a3ec3 AS base
FROM python:slim@sha256:8f3aba466a471c0ab903dbd7cb979abd4bda370b04789d25440cc90372b50e04 AS python
FROM node:lts-slim@sha256:1c18d9ab3af4585870b92e4dbc5cac5a0dc77dd13df1a5905cea89fc720eb05b AS nodejs
FROM rust:slim@sha256:9c1ef35ab804dc78361948794f60748e79a7a2e297580604b288590bc52ebdaa AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

CMD ["bash"]
