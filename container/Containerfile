ARG IMAGE="base"

# alias for major languages
FROM debian:12-slim@sha256:90522eeb7e5923ee2b871c639059537b30521272f10ca86fdbbbb2b75a8c40cd AS base
FROM python:slim@sha256:914bf5c12ea40a97a78b2bff97fbdb766cc36ec903bfb4358faf2b74d73b555b AS python
FROM node:lts-slim@sha256:ec318fe0dc46b56bcc1ca42a202738aeb4f3e347a7b4dd9f9f1df12ea7aa385a AS nodejs
FROM rust:slim@sha256:9276ca34712033fa8d12db5f07417c0f5e7eefa41ba9925fd8b5f87627cf2fec AS rust

FROM ${IMAGE}

RUN apt-get update && apt-get install -y \
  build-essential \
  cmake \
  git \
  vim

CMD ["bash"]
