{
	$schema: 'https://docs.renovatebot.com/renovate-schema.json',
	extends: [
		'config:best-practices',
	],
	timezone: 'Asia/Tokyo',
	automerge: true,
	automergeStrategy: 'rebase',
	nix: {
		enabled: true,
	},
	packageRules: [
		{
			// Group all nix inputs except edgepkgs, update once per day
			matchManagers: ['nix'],
			matchDepNames: ['!/^edgepkgs$/'],
			groupName: 'nix flake inputs',
			schedule: ['before 4:00am'],
		},
	],
}
