{
	$schema: 'https://docs.renovatebot.com/renovate-schema.json',
	extends: [
		'config:best-practices',
	],
	timezone: 'Asia/Tokyo',
	lockFileMaintenance: {
		enabled: true,
		schedule: [
			'before 3:00am',
		],
	},
	automerge: true,
	automergeStrategy: 'rebase',
	nix: {
		enabled: true,
	},
	packageRules: [
		{
			matchDatasources: ['docker'],
			groupName: 'docker images',
			extends: ['schedule:weekly'],
		},
	],
}
